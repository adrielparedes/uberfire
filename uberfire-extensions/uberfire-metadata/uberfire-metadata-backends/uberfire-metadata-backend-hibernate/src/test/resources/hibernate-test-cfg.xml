<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

  <!-- a SessionFactory instance listed as /jndi/name -->
  <session-factory
      name="java:hibernate/SessionFactory">

    <!-- properties -->
    <property name="connection.driver_class">org.h2.Driver</property>
    <property name="dialect">org.hibernate.dialect.H2Dialect</property>
    <property name="connection.url">jdbc:h2:mem:test</property>
    <property name="connection.username">sa</property>
    <property name="connection.password"/>
    <property name="hibernate.search.default.directory_provider">
      org.hibernate.search.store.impl.FSDirectoryProvider
    </property>
    <property name="hibernate.search.default.indexBase">/tmp/lucene/indexes</property>
    <property name="hibernate.hbm2ddl.auto">create</property>

    <!-- Define Hibernate entity mappings. Standard Hibernate stuff - not specific to Hibernate Search. -->
    <mapping class="org.uberfire.ext.metadata.backend.hibernate.model.KObjectImpl"/>

    <!-- mapping files -->
    <!--<mapping resource="org/hibernate/auction/Item.hbm.xml"/>-->


  </session-factory>

</hibernate-configuration>
