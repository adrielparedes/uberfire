<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
    http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
  <extension qualifier="docker">

    <property name="autoStartContainers">[none]</property>
    <property name="serverVersion">1.22</property>
    <property name="clean">true</property>
    <property name="definitionFormat">CUBE</property>
    <property name="dockerContainers">
      elastic:
        image: docker.elastic.co/elasticsearch/elasticsearch:5.5.1
        exposedPorts: [9200/tcp]
        env: [http.host=0.0.0.0,transport.host=127.0.0.1]
        await:
          strategy: sleeping
          sleepTime: 15s
        portBindings: [9200/tcp]
    </property>
  </extension>
</arquillian>